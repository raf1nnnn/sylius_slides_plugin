{% if banner is not null %}
{% set bannerIdentifier = 'carousel-' ~ banner.code %}

<section class="col-12 mb-3">
    <div id="{{ bannerIdentifier }}" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
        {% for slide in banner.slides %}
        {% set path = slide.path|imagine_filter('black_sylius_banner') %}

            <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}">
                <img src="{{ path }}" />

                <div class="carousel-caption d-none d-md-block">
                    {{ slide.content|raw }}
                </div>
            </div>
        {% endfor %}
        </div>

        <a class="carousel-control-prev" href="#{{ bannerIdentifier }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#{{ bannerIdentifier }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
{% endif %}
